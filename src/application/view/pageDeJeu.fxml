<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="360.0" prefWidth="640.0" style="-fx-background-color: lightgray;" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.gameController">
   <children>
      <Label fx:id="intituleQuestion" prefHeight="50.0" prefWidth="635.0" text="Label">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
         <VBox.margin>
            <Insets left="5.0" top="5.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="640.0">
         <children>
            <HBox alignment="CENTER" prefHeight="200.0" prefWidth="494.0">
               <children>
                  <AnchorPane fx:id="image" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#clickOnZone" prefHeight="200.0" prefWidth="400.0" />
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="260.0" prefWidth="150.0">
               <children>
                  <Label alignment="CENTER" prefHeight="30.0" prefWidth="230.0" text="Score" underline="true">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="score" alignment="CENTER" prefHeight="27.0" prefWidth="236.0" text="Label">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label alignment="CENTER" prefHeight="23.0" prefWidth="236.0" text="Temps restant" underline="true">
                     <font>
                        <Font name="Arial" size="20.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" prefHeight="27.0" prefWidth="274.0" text="Label">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onMouseClicked="#valider" prefWidth="100.0" style="-fx-background-color: lightgreen;" text="Valider">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onMouseClicked="#pop" prefWidth="100.0" style="-fx-background-color: red;" text="Quitter">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="51.0" prefWidth="640.0">
         <children>
            <Label prefHeight="22.0" prefWidth="102.0" text="Question n° ">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
            </Label>
            <Label fx:id="numeroQuestion" prefHeight="22.0" prefWidth="47.0" text="Label">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
            </Label>
            <ProgressBar fx:id="progression" prefWidth="200.0" progress="0.0">
               <HBox.margin>
                  <Insets left="15.0" right="10.0" />
               </HBox.margin>
            </ProgressBar>
            <Label fx:id="pourcentage" prefHeight="22.0" prefWidth="98.0" text="\% effectués">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
